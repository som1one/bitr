# =========================
# PROD ENV (пример)
# =========================

# Домен (для nginx/Next.js). Пример: installment.example.com
DOMAIN=installment.example.com

# Внешний URL фронта (куда возвращает ЮKassa после оплаты).
# Обязательно https в проде.
FRONTEND_URL=https://installment.example.com

# =========================
# Bitrix24 webhook
# =========================
# Пример: https://yourcompany.bitrix24.ru/rest/XXX/YYY
BITRIX_WEBHOOK_URL=

# =========================
# YooKassa (обязательно)
# =========================
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET=

# Проверка webhook подписи (в проде включить)
VERIFY_WEBHOOK_SIGNATURE=true
ENVIRONMENT=production

# =========================
# JWT
# =========================
# Сгенерируйте длинный секрет:
# openssl rand -hex 32
JWT_SECRET=

# =========================
# Admin access
# =========================
# Список идентификаторов (через запятую) для роли admin.
# Пример: admin@example.com,+79991112233,79991112233
ADMIN_IDENTIFIERS=

# Отдельный вход в админку (телефон+пароль) — опционально
ADMIN_LOGIN_PHONE=
ADMIN_LOGIN_PASSWORD=

# =========================
# Telegram уведомления (опционально)
# =========================
# Токен бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=
# ID чата (можно узнать у @userinfobot или через бота)
TELEGRAM_CHAT_ID=

# =========================
# Database (PostgreSQL)
# =========================
POSTGRES_DB=payment_logs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Внутренний URL БД для backend
DATABASE_URL=postgresql://postgres:postgres@db:5432/payment_logs

# =========================
# CORS (опционально)
# =========================
# Пример:
# ALLOWED_ORIGINS=https://installment.example.com
ALLOWED_ORIGINS=


